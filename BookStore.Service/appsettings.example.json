{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning",
			"Microsoft.AspNetCore.Routing": "Warning",
			"Microsoft.AspNetCore.Cors": "Warning",
			"Microsoft.Extensions.Diagnostics": "Error",
			"Microsoft.AspNetCore.Hosting.Diagnostics": "Error",
			"Microsoft.AspNetCore.Mvc": "Error"
		}
	},
	"AllowedHosts": "*",
	"Swagger": {
		"Allowed": true,
		"Description": "BookStore Service API",
		"ApiVersion": 1,
		"PathPrefix": "api",
		"Title": "BookStore API"
	},
	"Cors": {
		"Origins": [
			"http://localhost:3000",
			"https://localhost:3000"
		],
		"ExposeHeaders": [
			"Message",
			"RequestId",
			"X-Total-Count",
			"Location"
		]
	},
	"RoutePrefix": "/api/v{api:apiVersion}/bookstore",
	"Health": {
		"PathPrefix": "health/",
		"Version": "1.0.0",
		"SemVersion": "1.0.0",
		"BranchName": "main",
		"CommitSHA": "local",
		"BuiltOn": "local"
	},
	"Database": {
		"ConnectionString": "mongodb://localhost:27017",
		"DatabaseName": "bookstore"
	},
	"Redis": {
		"ConnectionString": "localhost:6379",
		"InstanceName": "bookstore",
		"Database": 0
	},
	"LLM": {
		"Provider": "Ollama",
		"Providers": {
			"Claude": {
				"ApiKey": "sk-ant-api03-YOUR_CLAUDE_API_KEY_HERE",
				"Model": "claude-3-5-sonnet-20241022",
				"Enabled": true
			},
			"Ollama": {
				"Url": "http://localhost:11434",
				"Model": "llama3.2",
				"Enabled": true
			},
			"OpenAI": {
				"ApiKey": "YOUR_OPENAI_API_KEY_HERE",
				"Model": "gpt-4o",
				"Enabled": false
			},
			"Bedrock": {
				"Region": "us-east-1",
				"Model": "us.anthropic.claude-sonnet-4-20250514-v1:0",
				"Enabled": false
			}
		}
	},
	"Telemetry": {
		"ApplicationName": "bookstore",
		"ServiceName": "BookStore.Service",
		"ServiceVersion": "1.0.0",
		"ExcludedPaths": [
			"/health",
			"/swagger",
			"/metrics"
		],
		"Tracing": {
			"Enabled": true,
			"SamplingRatio": 1.0,
			"Sources": [
				"BookStore.Service"
			],
			"AspNetCore": {
				"RecordException": true,
				"ExcludedRoutes": [
					"/health",
					"/swagger",
					"/metrics"
				]
			},
			"HttpClient": {
				"RecordException": true
			},
			"EnableRedisInstrumentation": true
		},
		"Metrics": {
			"Enabled": true,
			"Meters": [
				"BookStore.Service",
				"BookStore.Service.Claude",
				"BookStore.Service.Ollama",
				"BookStore.Service.OpenAI"
			],
			"EnableRuntimeInstrumentation": true,
			"EnableProcessInstrumentation": true
		},
		"Logging": {
			"Enabled": true,
			"IncludeScopes": true,
			"IncludeFormattedMessage": true
		},
		"Exporters": {
			"Console": {
				"Enabled": true,
				"Targets": 1
			},
			"Otlp": {
				"Enabled": false,
				"Endpoint": "",
				"ApiKey": ""
			},
			"Prometheus": {
				"Enabled": true
			}
		},
		"TraceLoop": {
			"Enabled": false,
			"Endpoint": "https://api.traceloop.com",
			"ApiKey": "YOUR_TRACELOOP_API_KEY_HERE"
		}
	}
}
